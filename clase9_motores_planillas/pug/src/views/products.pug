- let theresProducts = products.length > 0 ? true : false
html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        title="Desafio Motores planillas con Pug"
    body
        div(class='container')
            button(onclick="location.href='/'" class="btn btn-outline-dark")="Back to Form"
            h1(class="text-center")="Products list"
            div(class='container')
                if theresProducts 
                    table(class="table table-dark table-striped table-hover table-responsive text-center")
                        thead
                            tr
                                th(scope="col")="Title"
                                th(scope="col")="Price"
                                th(scope="col")="Thumbnail"
                        tbody
                            each product in products
                                tr
                                    td=product.title
                                    td=`$ ${product.price}`
                                    td  
                                        img(src=product.thumbnail class="w-25")
                else    
                    h2="Theres no products"


        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous")
